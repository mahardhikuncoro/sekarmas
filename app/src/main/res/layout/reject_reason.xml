<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="20dp"
                android:elevation="7dp"
                android:id="@+id/selectbranchLayout"
                android:orientation="vertical"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/selectBranchLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reject Aplikasi"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fieldBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectbranchLayout"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:elevation="7dp"
                android:orientation="vertical"
                android:background="@color/apply_kendaraanBackground"
                android:padding="10dp">

                <TextView
                    android:id="@+id/namaUserLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:text="Nama"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNama"
                    android:text="Nama"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:enabled="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginBottom="10dp">
                </android.support.design.widget.TextInputEditText>

                <TextView
                    android:id="@+id/nikUserLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:text="No Aplikasi "/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etNik"
                    android:text="No Aplikasi"
                    android:enabled="false"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp">
                </android.support.design.widget.TextInputEditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pilihBranchLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:text="Alasan Reject" />

                    <Spinner
                        android:id="@+id/branchSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/descUserLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:text="Deskripsi  "/>

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etDesc"
                    android:hint="Alasan Reject"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/branchCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/buttonBack"
            android:textColor="@color/white"
            android:background="@color/orange_light"/>
        <Button
            android:id="@+id/branchSaveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/buttonSimpan"
            android:textColor="@color/white"
            android:background="@color/orange_light"/>
    </LinearLayout>

</LinearLayout>
