<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/tabTitle">

        <TextView
            android:id="@+id/titleSimulasiKredit"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ganti Password"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/slidingTabDivider" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/layoutScrollPribadi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar3">

        <RelativeLayout
            android:id="@+id/form_data_pribadi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgPass"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/etDataEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/titlePass"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/etDataEmail"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgPass"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/oldpass"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/HintPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlePass"
                app:passwordToggleEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imgPass">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintPassword"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/etPassNew"
                    android:textSize="12.75sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/imgPassNew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/HintPass"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/titlePassNew"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/HintPass"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgPassNew"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/newpass"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/HintPassNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlePassNew"
                app:passwordToggleEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imgPassNew">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPassNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintPassword"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textSize="12.75sp"/>
            </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/imgRePassNew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/HintPassNew"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp" />

            <TextView
                android:id="@+id/titleRePassNew"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/HintPassNew"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgRePassNew"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/retypeNewPass"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/HintRePassNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleRePassNew"
                app:passwordToggleEnabled="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imgRePassNew">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etRePassNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintPassword"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/etDataKeterangan"
                    android:paddingLeft="10dp"
                    android:textSize="12.75sp"/>
            </android.support.design.widget.TextInputLayout>



            <Button
                android:id="@+id/btnChangePass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/HintRePassNew"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_button_red"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/buttonLanjut"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>