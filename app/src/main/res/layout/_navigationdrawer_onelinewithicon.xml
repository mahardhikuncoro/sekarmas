<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/navigationDrawerOneLineWithIconIcon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/navigationDrawerOneLineWithIconText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/navigationDrawerOneLineWithIconIcon"
        android:layout_toEndOf="@id/navigationDrawerOneLineWithIconIcon"
        android:gravity="center_vertical"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        android:textColor="@color/navigationDrawerText"/>

</RelativeLayout>