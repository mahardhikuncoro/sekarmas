<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/navigationDrawerHeaderImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/navigationdrawer"/>

    <TextView
        android:id="@+id/navigationDrawerHeaderText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigationDrawerHeaderText2"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="bottom|start"
        android:textSize="16sp"
        android:textColor="@color/navigationDrawerText"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/navigationDrawerHeaderText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigationDrawerHeaderText3"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="bottom|start"
        android:textSize="16sp"
        android:textColor="@color/navigationDrawerText"/>

    <TextView
        android:id="@+id/navigationDrawerHeaderText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|start"
        android:textSize="16sp"
        android:textColor="@color/navigationDrawerText"/>

    <ImageView
        android:id="@+id/navigationDrawerHeaderIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|start"/>

</RelativeLayout>