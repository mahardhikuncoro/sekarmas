<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bckgroundEntryFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/btnback_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_title_sidebaru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btnback_toolbar"
            android:gravity="center"
            android:singleLine="false"
            android:text="Sidebaru"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_post"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/ic_send" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/layoutScrollPribadi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/form_data_pribadi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_img_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/rootview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_img_post"
                        android:layout_marginBottom="-15dp"
                        app:cardCornerRadius="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--The child view inside the cardview should have extra padding,so that negative margin will not affect the bottom padding of its child.Here normally we have 16dp bottom padding for child + margin bottom of the parent is 3dp=19dp comes.-->

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="15dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" >

                                <ImageView
                                    android:id="@+id/iv_profile_sidebaru"
                                    android:layout_width="match_parent"
                                    android:layout_height="220dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/defaultslide" />

                                <TextView
                                    android:id="@+id/tv_nama_sidebaru"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_above="@+id/etAlamatsidebaru"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:paddingLeft="20dp"
                                    android:paddingBottom="50dp"
                                    android:text="LALALALALAL"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="15dp"
                                    android:paddingBottom="20dp"
                                    android:tint="@color/white"
                                    android:src="@drawable/ic_location" />

                                <TextView
                                    android:id="@+id/etAlamatsidebaru"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="120dp"
                                    android:paddingBottom="22dp"
                                    android:text="LALALALALALAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                                    android:textColor="@color/white"
                                    android:textSize="9dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/btn_image_bar_loc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_toLeftOf="@+id/etAlamatsidebaru"
                                    android:padding="10dp">

                                    <Button
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:background="@drawable/shape_round_shadow_white"
                                        android:text="Lokasi" />
                                </LinearLayout>
                                <ProgressBar
                                    android:id="@+id/post_progress_bar"
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_nama_sidebaru"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="20dp"
                                    android:indeterminateOnly="true" />

                            </RelativeLayout>

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_img_profil"
                android:background="@color/white">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_sektor"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_building"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearsektor"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title_sektor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Sektor"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/et_sektor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNama"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:nextFocusDown="@+id/tv_birth_date"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_handphone"
                android:layout_below="@+id/ln_sektor"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_phone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearhandphone"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/titlehandphone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/ln_kodepos"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Handphone"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/et_handphone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:inputType="phone"
                        android:enabled="false"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_telepon"
                android:layout_below="@+id/ln_handphone"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_call"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lineartelepon"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_telepon"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Telepon"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etTelepon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_email"
                android:layout_below="@+id/ln_telepon"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_email"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lineargroup"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/titleDataNoKTP"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/ln_kodepos"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Email"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etEmailsidebaru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:inputType="textEmailAddress"
                        android:hint=""
                        android:enabled="false"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_produk_utama"
                android:visibility="gone"
                android:layout_below="@+id/ln_email"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_profile_group"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearproduk_utama"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/title_produk_utama"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/ln_kodepos"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Produk Utama"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/et_produk_utama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_provinsi"
                android:layout_below="@+id/ln_produk_utama"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_location"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearprovinsi"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_provinsi"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Provinsi"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etProvinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_kabupaten"
                android:layout_below="@+id/ln_provinsi"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_location"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearkabupaten"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_kabupaten"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Kabupaten"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etkabupaten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_kecamatan"
                android:layout_below="@+id/ln_kabupaten"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_location"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearkecamatan"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_kecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Kecamatan"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etkecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_kelurahan"
                android:layout_below="@+id/ln_kecamatan"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_location"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearkelurahan"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_kelurahan"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Kelurahan"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etkelurahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_kodepos"
                android:layout_below="@+id/ln_kelurahan"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_building"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearkodepos"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_kodepos"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Kode Pos"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etkodepos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:enabled="false"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_profile_gambar"
                android:layout_below="@+id/ln_deskripsi"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:visibility="invisible"
                    android:src="@drawable/ic_profile_group"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearemail"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_title_email"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Profil gambar"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/btn_upload_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="Pilih Gambar.."
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/img_upload"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/et_post_write"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:contentDescription="TODO"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearout_gv"
                android:layout_below="@+id/ln_profile_gambar"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Gambar Produk"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <GridView
                    android:id="@+id/gridView_detail"
                    android:layout_below="@+id/tv_title_gridview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:columnWidth="100dp"
                    android:drawSelectorOnTop="true"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp"
                    android:focusable="true"
                    android:clickable="true"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_deskripsi"
                android:layout_below="@+id/ln_kodepos"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:tint="@color/blue_end"
                    android:src="@drawable/ic_newdoc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lineardeskripsi"
                    android:layout_below="@+id/textGantiPass"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/lineartelepon"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Deskripsi Sidebaru"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <EditText
                        android:id="@+id/etdeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_below="@+id/titleDataNoKTP"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint=""
                        android:gravity="top|start"
                        android:paddingLeft="10dp"
                        android:enabled="false"
                        android:inputType="textMultiLine"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/blue_background"
        fab:fab_addButtonColorPressed="@color/blue_end"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_edit"
            android:src="@drawable/ic_edit"
            android:tint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Perbahurui data"
            fab:fab_colorNormal="@color/blue_start"
            fab:fab_colorPressed="@color/blue_end"
            app:fabSize="normal"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_tambah_gambar"
            android:src="@drawable/ic_newdoc"
            android:tint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Tambah Gambar"
            fab:fab_colorNormal="@color/blue_start"
            fab:fab_colorPressed="@color/blue_end"
            app:fabSize="normal"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fb_delete"
            android:src="@drawable/ic_delete"
            android:tint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="Hapus data"
            fab:fab_plusIconColor="@color/white"
