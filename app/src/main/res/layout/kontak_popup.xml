<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:elevation="7dp"
                android:id="@+id/selectbranchLayout"
                android:orientation="vertical"
                android:background="@color/colorAccent">
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/v5_icon_popup_close_100px">
                </ImageView>

                <TextView
                    android:id="@+id/selectBranchLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Kontak Darurat"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"/>





            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/fieldBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectbranchLayout"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:elevation="7dp"
                android:orientation="vertical"
                android:background="@color/apply_kendaraanBackground"
                android:padding="10dp">

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rv_kotak"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/pb_kontak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    ></ProgressBar>

            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:id="@+id/branchCancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/buttonBack"
            android:textColor="@color/white"
            android:background="@color/orange_light"/>
        <Button
            android:id="@+id/branchSaveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/buttonSimpan"
            android:textColor="@color/white"
            android:background="@color/orange_light"/>
    </LinearLayout>

</LinearLayout>
