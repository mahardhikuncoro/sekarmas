<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_shadow_white"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/rentalLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_umkm"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:id="@+id/iconlist"
            card_view:tint="@color/md_grey_600" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaNasabah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nama"
                android:textAllCaps="true"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/orange_dark"
                android:justificationMode="inter_word"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idNasabah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=""
                android:gravity="center_vertical"
                android:textColor="@color/md_grey_500" />
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="15/06/2020 "
                android:visibility="gone"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"
                android:textColor="@color/red" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_reject"
            android:layout_gravity="center"
            android:padding="10dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>